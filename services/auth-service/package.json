{
  "name": "@questlog/auth-service",
  "version": "0.1.0",
  "description": "Questlog Authentication Service",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "fastify": "^4.24.0",
    "@fastify/cors": "^8.3.0",
    "@fastify/helmet": "^9.0.2",
    "@fastify/rate-limit": "^7.3.0",
    "@fastify/swagger": "^8.6.0",
    "@fastify/swagger-ui": "^1.10.1",
    "zod": "^3.22.0",
    "prisma": "^5.3.0",
    "@prisma/client": "^5.3.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "redis": "^4.6.8",
    "dotenv": "^16.3.1",
    "nodemailer": "^6.9.4",
    "@questlog/shared": "*",
    "@questlog/types": "*"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/nodemailer": "^6.4.11",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "tsx": "^3.12.7",
    "typescript": "^5.3.3",
    "vitest": "^0.34.0",
    "@vitest/coverage-v8": "^0.34.0",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.14"
